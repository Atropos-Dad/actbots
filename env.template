# Discord Bot Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Discord Configuration
# Get these from Discord Developer Portal (https://discord.com/developers/applications)
# =============================================================================

# Your Discord Application ID (from General Information tab)
DISCORD_APP_ID=your_application_id_here

# Your Discord Bot Token (from Bot tab - keep this secret!)
DISCORD_BOT_TOKEN=your_bot_token_here

# Your Discord Application Public Key (from General Information tab)
DISCORD_PUBLIC_KEY=your_public_key_here

# Optional: Your Discord server/guild ID for faster command testing
# Enable Developer Mode in Discord, right-click server name, "Copy Server ID"
DISCORD_GUILD_ID=your_test_server_id_here

# =============================================================================
# API Keys
# =============================================================================

# Jentic Platform API Key
JENTIC_API_KEY=your_jentic_api_key_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI Model (defaults to gpt-4-turbo)
OPENAI_MODEL=gpt-4-turbo

# =============================================================================
# AWS Configuration (for CLI deployment)
# =============================================================================

# AWS Region for Lambda deployment
AWS_REGION=us-east-1

# AWS Profile (if using AWS CLI)
AWS_PROFILE=default

# =============================================================================
# Development/Testing (Optional)
# =============================================================================

# Log level for debugging
LOG_LEVEL=INFO

# Environment (development, staging, production)
ENVIRONMENT=development 